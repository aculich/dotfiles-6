#!/bin/sh

for f; do
	case "$f" in
	*.bash|*.zsh|*.sh)
		set -- --language=bash "$@"
		break ;;
	*.c|*.h)
		set -- --language=C "$@"
		break ;;
	*.cpp|*.cc|*.hpp|*.hh)
		set -- --language=C++ "$@"
		break ;;
	*.txt)
		set -- --language=Markdown "$@"
		break ;;
	esac
done

# stdin
if test -z "$*"; then
	set -- --language=C
fi

# set -- --theme=1337 "$@"
set -- --theme=DarkNeon "$@"

exec bat "$@"
