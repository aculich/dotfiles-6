
	local input output
	local -a ext
	if [[ -z "$2" ]]; then
		[[ "${1##*.}" == "gif" ]] && ext=('gif') || ext=('copy')
		input="${1##*.}"
		output="$1"
	else
		if [[ "${2##*.}" == "$1" ]]; then
			ext=('copy')
		else
			[[ "${2##*.}" == "gif" ]] && ext=('gif') || ext=('hevc' '-preset' 'ultrafast')
		fi
		input="${1##*.}"
		output="$2"
	fi
	ffmpeg -safe 0 -f concat \
		-i <(find . -name "*.$input" -printf "file '${PWD}/%P'\n") \
		-c:v "${ext[@]}" -c:a copy \
		"$output" -threads 0
